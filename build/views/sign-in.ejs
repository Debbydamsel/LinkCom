<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign-up page</title>
    <link rel="stylesheet" href="/css/styles3.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
</head>
<body>
    
    <div class="div-class">
    
        <h1>Welcome back!</h1>
        <h5>Enter your details below</h5>

        
        <form action="/users/log-in" method="POST">

            <input class="msg" type="email" placeholder="Email" name="email"required autocomplete="off">
            
            <hr>

            <input class="msg" type="password" placeholder="Password" name="password" required autocomplete="off">
            
            <hr>
            <br>
            <button class="button" type="submit" value="submit">Login</button>
        </form>
        
        <p>Don't have an account? <span><a href="/users/sign-up">Create account</a></span></p>
    </div>

    <script>
        const form = document.querySelector("form");

        form.addEventListener("submit", async(e) => {
            e.preventDefault();
            
                const email = form.email.value;
                const password = form.password.value;
                console.log(email, password);

            try {
                const res = await fetch("/users/log-in", {
                    method: "POST",
                    body: JSON.stringify({ email, password }),
                    headers: { "Content-Type": "application/json" }
                })
                const data = await res.json();
                console.log(data);
                if (data.user) {
                    location.assign("/api/url/getAuthPage");
                }

            } catch (error) {
                console.log(error);
            }

            
        })
    </script>

</body>
</html>